{
	"compilerOptions": {
		"target": "es2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"rootDir": ".",
		"outDir": "./out",
		"strict": true,
		"jsx": "preserve",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
		"@/*": ["src/*"]
	},
	"types": ["node"],
	"lib": ["ESNext", "DOM"]
	},
	"include": [
		"**/*.ts",
		"**/*.js",
		"**/*.vue"
	]
}
